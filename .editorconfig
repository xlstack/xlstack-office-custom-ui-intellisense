# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{proj,props,sln}]
indent_style = tab

[*.{nuspec,csproj,targets,ps1}]
indent_size = 2
